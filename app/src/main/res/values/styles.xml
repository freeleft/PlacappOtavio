<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Label" parent="Componente_Default">
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Componente_Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Input" parent="Componente_Default">
    </style>

    <style name="Button" parent="Componente_Default">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Input_Home" parent="Input">
        <item name="android:hint">@string/Hint_Home</item>
    </style>

    <style name="Input_Visitante" parent="Input">
        <item name="android:hint">@string/Hint_Visitante</item>
    </style>

    <style name="LabelPlacar">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="BotaoGol">
        <item name="android:text">@string/label_goal</item>
    </style>


</resources>
